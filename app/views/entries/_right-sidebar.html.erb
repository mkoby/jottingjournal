<div class="container-fluid span12">
  <div class="row-fluid">
    <%= link_to content_tag(:i, '', :class => "icon-plus icon-white") + ' New', new_entry_path, :class => "btn btn-inverse" %><br/>
  </div>
  <% if @entries %>
    <div class="row-fluid">
      <table class="table-striped">
        <% @entries.each do |e| %>
          <%= render(:partial => 'sidebar-entry', :locals => { :old_entry => e }) if e.created_at %>
        <% end %>
      </table>
    </div>
  <% end %>
</div>

<!DOCTYPE html>
<html>
  <head>
    <title>Jotting Journal - Your Life, Your Journal</title>
    <%= javascript_include_tag "https://js.stripe.com/v1/" %>
    <%= stylesheet_link_tag    "application", :media => "all" %>
    <%= javascript_include_tag "application" %>
    <%= csrf_meta_tags %>
  </head>
  <body>
  <%= render :partial => "menu" %>
    

    <div class="row-fluid">
      <div class="span5 offset4 pagination-centered" id="messages">
        <% flash.each do |key, msg| %>
          <%= display_flash(key, msg) %>
        <% end %>
      </div>
    </div>

    <div class="container-fluid">
      <div class="row-fluid">
        <div class="span3">
        </div>
        <div class="span9" id="entry-space">
          <%= yield %>
        </div>
     </div>
    </div>
    <%= render :partial => "layouts/footer" %>
    </body>
</html>
